
<section class="fdb-block">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-7 col-md-5 text-center">
        <div class="fdb-box fdb-touch">
          <div class="row">
            <div class="col">
              <h1>商品編集</h1>
            </div>
          </div>
          <%= form_with model: @product, local: true do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            <div class="row">
              <div class="col mt-4">
                <%= f.text_field :name, class: 'form-control', placeholder: "Product Name"%>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col">
                <%= f.date_field :deadline, class: 'form-control', placeholder: "Date" %>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col">
                <%= f.submit nil, class: 'btn btn-primary' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>