<section class="fdb-block" style="background-image: url(/images/blue.svg);">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-7 col-xl-5 text-center">
        <div class="fdb-box">
          <div class="row">
            <div class="col">
              <h1>サインイン</h1>
            </div>
          </div>
          <%= form_with model: @user, local: true  do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            <div class="row mt-4">
              <div class="col">
                <%= f.text_field :name, class:"form-control", placeholder:"name" %>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col">
                <%= f.email_field :email, class:"form-control", placeholder:"Email" %>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col">
                <%= f.password_field :password, class:"form-control", placeholder:"Password" %>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col">
                <%= f.password_field :password_confirmation, class:"form-control mb-1", placeholder:"Password（確認用）" %>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col">
                <%= f.submit nil, class: 'btn btn-outline-secondary' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>