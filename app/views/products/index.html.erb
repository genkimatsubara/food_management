<%= render 'shared/flash_messages' %>
<section class="fdb-block">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-8 col-md-6 col-lg-6 text-center">
        <h2>
          <strong>商品一覧</strong>
        </h2>
        <p class="mt-5 mt-sm-4">
          <%= link_to '新商品登録', new_product_path, class: 'btn btn-outline-primary' %>
        </p>
      </div>
    </div>
  </div>
</section>
<div class="container">
  <div class="row">
    <div class="col-12">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">商品名</th>
            <th scope="col">期限</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
           <% @products.each do |product| %>
              <tr>
                <td><%= product.name %></td>
                <td><%= product.deadline %></td>
                <td>
                    <%= link_to  edit_product_path(product), class: 'btn btn-success' do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= link_to product, method: :delete, remote: true, data: { confirm: "「#{product.name}」を削除をします。よろしいですか？"}, class: 'btn btn-danger delete' do %>
                      <i class="far fa-trash-alt"></i>
                    <% end %>
                </td>
              </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>