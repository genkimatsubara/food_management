<section class="fdb-block py-0">
  <div class="container bg-r py-5 my-5" style="background-image: url(/images/2.svg);">
    <div class="row py-5">
      <div class="col-12 col-sm-10 col-md-8 col-lg-6 text-left">
        <h1>プロフィール</h1>
        <%= form_with model: @user, local: true  do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
            <div class="row mt-4">
              <div class="col">
                <%= f.text_field :name, class:"form-control", placeholder:"Name" %>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col">
                <%= f.email_field :email, class:"form-control", placeholder:"Email" %>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col">
                <%= f.password_field :password, class:"form-control", placeholder:"Password" %>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col">
                <%= f.password_field :password_confirmation, class:"form-control mb-1", placeholder:"Password（確認用）" %>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col">
                <%= f.submit nil, class: 'btn btn-outline-dark' %>
              </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</section>