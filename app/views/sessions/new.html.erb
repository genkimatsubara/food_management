<section class="fdb-block" style="background-image: url(/images/blue.svg);">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-7 col-xl-5 text-center">
        <div class="fdb-box">
          <div class="row">
            <div class="col">
              <h1>ログイン</h1>
            </div>
          </div>
          <%= form_with scope: :session, local: true  do |f| %>
            <div class="row mt-4">
              <div class="col">
                <%= f.email_field :email, class:"form-control", placeholder:"Email" %>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col">
                <%= f.password_field :password, class:"form-control mb-1", placeholder:"Password" %>
                <p class="text-right"><a href="#">Recover Password</a></p>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col">
                <%= f.submit 'ログイン', class: 'btn btn-outline-secondary' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>